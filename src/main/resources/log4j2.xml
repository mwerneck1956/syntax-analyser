<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="LogFile" fileName="logs/application.log">
      <PatternLayout pattern="%d [%t] %-5p %c{1}:%L - %m%n" />
    </File>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="LogFile" />
    </Root>
  </Loggers>
</Configuration>